VERSION=188
PKG_NAME=udev
SRC_DIR=systemd-$VERSION
PKG_LOCATION="http://www.freedesktop.org/software/systemd/systemd-$VERSION.tar.xz"
PKG_CONFIG_PATH=$PKG_DIR/$SRC_DIR
MAKE_TARGETS=(systemd-udevd udevadm ata_id cdrom_id scsi_id v4l_id collect accelerometer)
CONFIGFLAGS="--with-rootprefix=''    \
			 --bindir=/sbin          \
			 --sysconfdir=/etc       \
			 --libexecdir=/lib       \
			 --disable-gtk-doc       \
			 --disable-gtk-doc-html  \
			 --disable-gtk-doc-pdf   \
			 --enable-rule_generator \
			 --disable-introspection \
			 --disable-keymap        \
			 --disable-gudev         \
			 --without-usb-ids-path  \
			 --without-pci-ids-path"
TOOL_DEPS=(intltool gperf)
