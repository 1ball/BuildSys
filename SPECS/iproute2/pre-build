#!/bin/bash -eE

# The arpd binary included in this package is dependent on Berkeley DB. Because arpd is not a very common requirement on a base Linux system, remove the dependency on Berkeley DB by applying the commands below.
sed -i '/^TARGETS/s@arpd@@g' misc/Makefile
sed -i /ARPD/d Makefile

# There is a configure script that is not generated by auto-tools. Rename it to prevent misunderstood by build system.
mv configure configure-non-auto
sed -i 's/configure/configure-non-auto/' Makefile

# Reset DESTDIR
sed -i '/^DESTDIR=/s|/usr||' Makefile
# Install doc and man in more appropriate directory
sed -i '/^DOCDIR=/s|/share|/usr/share|' Makefile
sed -i '/^MANDIR=/s|/share|/usr/share|' Makefile

rm man/man8/arpd.8
